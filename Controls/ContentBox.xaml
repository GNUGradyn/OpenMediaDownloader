<UserControl x:Class="OpenMediaDownloader.Controls.ContentBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenMediaDownloader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="5" BorderBrush="#dcdcdc" BorderThickness="1">
        <StackPanel>
            <Label Background="#F0F0F0" Margin="10 -12 0 0" HorizontalAlignment="Left" Content="{Binding Title, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ContentBox}}}"/>
            <StackPanel Margin="10"/>
        </StackPanel>
    </Border>
</UserControl>
