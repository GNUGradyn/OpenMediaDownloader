<UserControl x:Class="OpenMediaDownloader.Controls.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenMediaDownloader.Controls" xmlns:local1="clr-namespace:OpenMediaDownloader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Control.Resources>
        <local1:StringToBrushConverter x:Key="StringToBrushConverter"/>
    </Control.Resources>
    <Grid>
        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"  BorderBrush="#333333" GotFocus="Search_GotFocus" LostFocus="Search_LostFocus" VerticalContentAlignment="Center" Foreground="{Binding SearchQueryColor, Converter={StaticResource StringToBrushConverter}}"/>
        
    </Grid>
</UserControl>
