<UserControl x:Class="OpenMediaDownloader.Controls.TextboxWithPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenMediaDownloader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
		<TextBox Name="textbox" Text="{Binding ActualText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:TextboxWithPlaceholder}}, UpdateSourceTrigger=PropertyChanged}" Loaded="TextboxLoaded" GotFocus="TextboxGotFocus" LostFocus="TextboxLostFocus" VerticalContentAlignment="Center" Foreground="#b3b3b3"/>
</UserControl>
